function calculate()
{

var ціна=parseFloat(document.myform.ціна.value);

var кількість=parseFloat(document.myform.кількість.value);

if(document.myform.mebly[0].checked)
document.myform.result.value="Замовлення складає="+(50*кількість);
else
if(document.myform.mebly[1].checked)
document.myform.result.value="Замовлення складає="+(300*кількість);
else
if(document.myform.mebly[2].checked)
document.myform.result.value="Замовлення складає="+(100*кількість);
else
if(document.myform.mebly[3].checked)
document.myform.result.value="Замовлення складає="+(200*кількість);
else
if(document.myform.mebly[4].checked)
document.myform.result.value="Замовлення складає="+(100*кількість);
else
document.myform.result.value="Замовлення складає="+(0*кількість);
}
</script>
